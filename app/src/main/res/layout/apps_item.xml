<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivLogoApp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        android:outlineSpotShadowColor="#000"
        android:src="@drawable/martin_garrix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="14sp"
        android:text="nama app"
        app:layout_constraintTop_toBottomOf="@id/ivLogoApp"
        app:layout_constraintStart_toStartOf="@id/ivLogoApp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSizeApp"
        android:textColor="#8e8e8e"
        android:textSize="10dp"
        android:text="size app"
        app:layout_constraintTop_toBottomOf="@id/tvNameApp"
        app:layout_constraintStart_toStartOf="@id/tvNameApp" />

</androidx.constraintlayout.widget.ConstraintLayout>